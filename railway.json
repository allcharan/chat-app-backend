{
  "buildCommand": "mvn clean package -DskipTests",
  "startCommand": "java -jar target/auth-service-1.0.0.jar",
  "envConfig": {
    "SERVER_PORT": {
      "description": "Server port (default 8080)",
      "default": "8080"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL connection string from Railway",
      "required": true
    },
    "DATABASE_USER": {
      "description": "PostgreSQL username",
      "default": "postgres"
    },
    "DATABASE_PASSWORD": {
      "description": "PostgreSQL password",
      "required": true
    },
    "JWT_SECRET": {
      "description": "256-bit secret for JWT signing (generate: openssl rand -hex 32)",
      "required": true
    },
    "JWT_EXPIRATION": {
      "description": "JWT token expiration in milliseconds (3600000 = 1 hour)",
      "default": "3600000"
    },
    "MAIL_HOST": {
      "description": "SMTP server host",
      "default": "smtp.gmail.com"
    },
    "MAIL_PORT": {
      "description": "SMTP server port",
      "default": "587"
    },
    "MAIL_USERNAME": {
      "description": "Gmail address for sending OTP",
      "required": true
    },
    "MAIL_PASSWORD": {
      "description": "Gmail app password (NOT account password)",
      "required": true
    },
    "OTP_LENGTH": {
      "description": "OTP digit length",
      "default": "6"
    },
    "OTP_EXPIRY_MINUTES": {
      "description": "OTP validity duration in minutes",
      "default": "5"
    },
    "CORS_ALLOWED_ORIGINS": {
      "description": "Comma-separated list of allowed frontend URLs",
      "required": true
    }
  }
}
